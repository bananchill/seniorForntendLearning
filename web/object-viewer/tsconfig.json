{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "paths": {
      "@/*":     ["src/*"],
      "@core/*": ["src/core/*"],
      "@utils/*":["src/utils/*"],
      "@types": ["src/types"]
    }
  },
  "include": ["src"]
}